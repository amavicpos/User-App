<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-md-8 m-auto pt-4">
            <div class="row">
                <div class="col-12">
                    <form action="/users" method="POST" autocomplete="off" enctype="multipart/form-data">
                        <div class="form-group container">
                            <div class="row">
                                <div class="col-2">
                                    <input type="text" name="name" class="form-control" placeholder="Name" required autofocus />
                                </div>
                                <div class="col-2">
                                    <input type="text" name="email" class="form-control" placeholder="Email" required />
                                </div>
                                <div class="col-2">
                                    <input type="text" name="interests" class="form-control" placeholder="Interests" required />
                                </div>
                                <div class="col-4">
                                    <input type="file" name="image" accept="image/*">
                                </div>
                                <div class="col-2">
                                    <button type="submit" class="btn" style="background-color: goldenrod; color: white">Submit</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <input type="text" name="biography" class="form-control" placeholder="Biography" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-12">
                    <% if(Object.keys(profiles).length> 0) { %>
                        <ul class="nav flex-column">
                            <% profiles.forEach(user=> { %>
                                <li class="nav-item">
                                    <div class="d-flex justify-content-between align-items-center py-1">
                                        <div class="col-5">
                                            <%= user.name %>
                                        </div>
                                        <div class="col-3">
                                            <a class="btn" style="background-color: goldenrod; color: white" href="/users/update/<%= user._id %>">Update
                                                profile</a>
                                        </div>
                                        <div class="col-3">
                                            <a class="btn" style="background-color: goldenrod; color: white" href="/users/show/<%= user._id %>">Read
                                                profile</a>
                                        </div>
                                        <div class="col-1">
                                            <a href="javascript:;" onclick="this.children[0].submit()"
                                            class="text-danger">
                                            <form method="POST" action="/users/delete/<%= user._id %>">
                                                <input type="hidden" name="_key" value="<%= user._id %>" />
                                            </form>
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <div class="text-center"><strong>Please add a user.</strong></div>
                            <% }%>
                </div>
            </div>
        </div>
    </div>
</div>
