<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-md-8 m-auto pt-4">
            <div class="row">
                <h3><%= team.name %> users</h3>
            </div>
            <br>
            <div class="row">
                <div class="col-12">
                    <% if(Object.keys(team.users).length> 0) { %>
                        <ul class="nav flex-column" style="width: 80%;">
                            <% team.users.forEach(user=> { %>
                                <li class="nav-item">
                                    <div class="d-flex justify-content-between align-items-center py-1">
                                        <div class="col-8">
                                            <%= user.name %>
                                        </div>
                                        <div class="col-1 mx-auto">
                                            <a style="color: green;" href="/users/update/<%= user._id %>">
                                                <i class="fa-solid fa-pen-nib"></i>
                                            </a>
                                        </div>
                                        <div class="col-1 mx-auto">
                                            <a style="color: blue;" href="/users/show/<%= user._id %>">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>
                                        </div>
                                        <div class="col-1 mx-auto">
                                            <a style="color: red;" href="javascript:;" onclick="this.children[0].submit()">
                                                <form method="POST" action="/users/delete/<%= user._id %>">
                                                    <input type="hidden" name="_key" value="<%= user._id %>" />
                                                </form>
                                                <i class="fa fa-trash-o"></i>
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <div class="text-center"><strong>No users.</strong></div>
                            <% }%>
                </div>
            </div>
            <div class="mt-3 row">
                <button class="btn" id="back" style="background-color: goldenrod; color: white">Back</button>
            </div>
        </div>
    </div>
</div>

<script>
    let btnBack = document.querySelector('#back');

    btnBack.addEventListener('click', () => {
        window.history.back()
    });
</script>

