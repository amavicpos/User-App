<% layout('layouts/boilerplate') %>
<div class="d-flex flex-row">
    <div>
        Name: <%= user.name %><br>
        Email: <%= user.email %><br>
        Interests: <%= user.interests %><br>
        <% if (user.picture) { %>
            <img src=<%= user.picture.image.srcUrl %> alt=""/>
        <% } %>
    </div>
</div>
<a class="btn btn-primary" href="/users">All profiles</a>
