<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-md-8 m-auto pt-4">
            <div class="row">
                <h3>Search results: containing <%= query %></h3>
            </div>
            <br>
            <div class="row">
                <div class="col-12">
                    <% if(Object.keys(profiles).length> 0) { %>
                        <ul class="nav flex-column">
                            <% profiles.forEach(user=> { %>
                                <li class="nav-item">
                                    <div class="d-flex justify-content-between align-items-center py-1">
                                        <div class="col-5">
                                            <%= user.name %>
                                        </div>
                                        <div class="col-3">
                                            <a class="btn" style="background-color: goldenrod; color: white" href="/users/update/<%= user._id %>">Update
                                                profile</a>
                                        </div>
                                        <div class="col-3">
                                            <a class="btn" style="background-color: goldenrod; color: white" href="/users/show/<%= user._id %>">Read
                                                profile</a>
                                        </div>
                                        <div class="col-1">
                                            <a href="javascript:;" onclick="this.children[0].submit()"
                                            class="text-danger">
                                            <form method="POST" action="/users/delete/<%= user._id %>">
                                                <input type="hidden" name="_key" value="<%= user._id %>" />
                                            </form>
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <div class="text-center"><strong>No results.</strong></div>
                            <% }%>
                    <div class="mt-3 row">
                        <button class="btn" id="back" style="background-color: goldenrod; color: white">Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let btnBack = document.querySelector('#back');

    btnBack.addEventListener('click', () => {
        window.history.back()
    });
</script>
